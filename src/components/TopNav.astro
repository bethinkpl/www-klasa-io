---
const pathname = new URL(Astro.request.url).pathname;
const root = pathname.match(/^\/[^\/]*/);

const links = [
	{
		path: '/',
		text: 'Product',
	},
	{
		path: '/blog',
		text: 'Blog',
	},
	{
		path: '/case-studies',
		text: 'Case studies',
	},
];
---

<div class="fixed z-30 bg-white bg-opacity-50 backdrop-blur-md top-0 w-full">
	<nav
		class="flex px-6 lg:px-8 h-16 lg:h-24 items-center justify-between"
		aria-label="Global"
	>
		<div class="flex lg:min-w-0 lg:flex-1" aria-label="Global">
			<a href="/" class="-m-1.5 p-1.5">
				<span class="sr-only">KLASA</span>
				<img
					class="h-6 sm:h-8"
					src="/images/klasa-logo-horizontal.svg"
					alt="KLASA's logo"
				/>
			</a>
		</div>
		<div class="hidden lg:flex lg:min-w-0 lg:flex-1 lg:justify-center lg:gap-x-12">
			{
				links.map((link) => (
					<a
						href={link.path}
						class={`${
							root && root[0] === link.path ? 'text-blue-500' : 'text-gray-900'
						} font-bold hover:text-gray-900`}
					>
						{link.text}
					</a>
				))
			}
		</div>
		<div class="flex min-w-0 flex-1 justify-end">
			<a
				href="mailto:contact@klasa.io"
				class="inline-block rounded-lg px-3 py-1.5 text-sm font-bold leading-6 text-gray-900 shadow-sm ring-1 ring-gray-900/10 hover:ring-gray-900/20"
				>Contact us</a
			>
		</div>
	</nav>
</div>
